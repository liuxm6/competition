  <view style="background-image: url('../../assets/img/qs_bg.png');">
    <radio-group wx-if="{{curSubject.ans.length==1}}" class="radio-group" bindchange="radioChange">
      <view>
        <label class='{{(ischecked!=-1)?((ischecked==index)?(isright?"btn_right":"btn_error"):((curSubject.ans==index)?"btn_right":"btn_blk")):"btn_blk"}}' wx:for="{{curSubject.opts}}" wx:key='index' wx:for-item='opts' style='display:block'>
          <radio value="{{opts.value}}" checked="{{opts.checked}}"/>{{opts.title}}
        </label>
      </view>
    </radio-group>
  </view>

  <view wx-if="{{curSubject.ans.length>1}}" >
      <checkbox-group class="chk_group" bindchange="checkboxChange">
            <label class="checkbox" wx:for='{{ curSubject.opts }}' wx:key='index' wx:for-item='opts' class='{{(rightAnsList[index].isright)?"chk_right":((rightAnsList[index].ischecked==1)?"chk_err":"chk_blk")}}'>
            <checkbox value="{{opts.value}}" checked="{{opts.checked}}"/>{{opts.title}}
        </label>
      </checkbox-group>
  </view> 

