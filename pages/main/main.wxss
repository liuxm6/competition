/* radio  */

/* 选对后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

.btn_right radio .wx-radio-input.wx-radio-input-checked::before {
  background-color: greenyellow;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
}

/* 选错后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

.btn_error radio .wx-radio-input.wx-radio-input-checked::before {
  background-color: red;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
}

/* 选错后的背景样式 */

.btn_error radio .wx-radio-input.wx-radio-input-checked {
  border: none;
  background: red;
}

/* 选对后的背景样式 */

.btn_right radio .wx-radio-input.wx-radio-input-checked {
  border: none;
  background: greenyellow;
}

.btn_error radio .wx-radio-input.wx-radio-input-checked::before,
.btn_right radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 100%;
  height:100%;
  text-align: center;
  color: transparent; /* 对勾颜色 白色 */
  line-height: 50rpx;
  /* margin-left: 1px; */
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

